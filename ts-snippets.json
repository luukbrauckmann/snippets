{
	"get-function": {
		"scope": "ts",
		"prefix": "function get",
		"description": "Standaard get functie",
		"body": [
			"get(): Promise<any> {",
			"\tconst resource = '...url/'",
			"\tconst options = { method: 'GET' }",
			"\treturn fetch(resource, options)",
			"\t\t.then(responseString => responseString.json())",
			"\t\t.then(response => response)",
			"\t\t.catch(error => console.error(error))",
			"\t\t.finally(() => console.info('Functie klaar.'))",
			"}"
		]
	},
	"create-function": {
		"scope": "ts",
		"prefix": "function create",
		"description": "Standaard create functie",
		"body": [
			"post(data): Promise<any> {",
			"\tconst resource = '...url/'",
			"\tconst options = { method: 'POST', body: data }",
			"\treturn fetch(resource, options)",
			"\t\t.then(responseString => responseString.json())",
			"\t\t.then(response => response)",
			"\t\t.catch(error => console.error(error))",
			"\t\t.finally(() => console.info('Functie klaar.'))",
			"}"
		]
	},
	"update-function": {
		"scope": "ts",
		"prefix": "function update",
		"description": "Standaard update functie",
		"body": [
			"update(data): Promise<any> {",
			"\tconst resource = '...url/'",
			"\tconst options = { method: 'PUT', body: data }",
			"\treturn fetch(resource, options)",
			"\t\t.then(responseString => responseString.json())",
			"\t\t.then(response => response)",
			"\t\t.catch(error => console.error(error))",
			"\t\t.finally(() => console.info('Functie klaar.'))",
			"}"
		]
	},
	"delete-function": {
		"scope": "ts",
		"prefix": "function delete",
		"description": "Standaard delete functie",
		"body": [
			"delete(id): Promise<any> {",
			"\tconst resource = `...url/${id}`",
			"\tconst options = { method: 'DELETE' }",
			"\treturn fetch(resource, options)",
			"\t\t.then(responseString => responseString.json())",
			"\t\t.then(response => response)",
			"\t\t.catch(error => console.error(error))",
			"\t\t.finally(() => console.info('Functie klaar.'))",
			"}"
		]
	}
}