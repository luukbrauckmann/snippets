{
	"stylesheet-boilerplate": {
		"scope": "css",
		"prefix": "new stylesheet",
		"description": "Stylesheet boilerplate",
		"body": [
			":root {",
			"\t--spacing: .5rem;",
			"}",
			"",
			"* {",
			"\tbox-sizing: border-box;",
			"\tmargin: 0;",
			"\tpadding: 0;",
			"}",
			"",
			"html {",
			"\tfont-size: 16px;",
			"\theight: 100%;",
			"}",
			"",
			"body {",
			"\tfont-family: Arial, san-serif;",
			"}",
			"",
			"body,",
			"article,",
			"section {",
			"\tdisplay: flex;",
			"\tflex-flow: column;",
			"\tgap: .5rem;",
			"\theight: 100%;",
			"}",
			"",
			"body > header,",
			"body > footer,",
			"article > header,",
			"article > footer,",
			"section > header,",
			"section > footer {",
			"\tflex: 0 1 auto;",
			"}",
			"",
			"body > main {",
			"\tpadding: 0 var(--spacing)",
			"}",
			"",
			"body > main,",
			"article > div,",
			"section > div {",
			"\tflex: 1 1 auto;",
			"}"
		]
	}
}