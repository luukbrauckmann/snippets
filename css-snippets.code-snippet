{
	"stylesheet-boilerplate": {
		"scope": "css",
		"prefix": "new stylesheet",
		"description": "Stylesheet boilerplate",
		"body": [
			":root {",
			"\t--spacing: .5rem;",
			"}",
			"",
			"* {",
			"\tall: unset;",
			"\tbox-sizing: border-box;",
			"}",
			"",
			"html {",
			"\tfont-size: 16px;",
			"}",
			"",
			"body {",
			"\tfont-family: Arial, san-serif;",
			"}",
			"",
			"html {",
			"\theight: 100%;",
			"}",
			"",
			"body,",
			"article {",
			"\tdisplay: flex;",
			"\tflex-flow: column;",
			"\tgap: .5rem;",
			"\theight: 100%;",
			"}",
			"",
			"body > header,",
			"body > footer,",
			"article > h1,",
			"article > h2,",
			"article > h3,",
			"article > h4,",
			"article > h5,",
			"article > h6,",
			"article > footer {",
			"\tflex: 0 1 auto;",
			"}",
			"",
			"article > main {",
			"\tpadding: 0 var(--spacing)",
			"}",
			"",
			"article > main,",
			"article > p {",
			"\tflex: 1 1 auto;",
			"}"
		]
	}
}